{% extends 'base.html.twig' %}

{% block title %}Hello ContactController!{% endblock %}

{% form_theme contactForm 'bootstrap_5_layout.html.twig' %}

{% block body %}
    <div class="row justify-content-center col-md-12 pt-2" id="contact-form">
        <img class="img-fluid w-25 h-50 m-5" src="{{ asset('build/images/contact.png') }}" alt="contact">

        <div class="row justify-content-center col-md-6" >
            <h3 class="text-center">Une question? Contactez-nous!</h3>

            {{ form_start(contactForm, { 'attr': {'class': 'row', 'novalidate': 'novalidate', 'id': 'contact-form'} }) }}
            {{ form_row(contactForm.firstName) }}
            {{ form_row(contactForm.name) }}            
            {{ form_row(contactForm.Email) }}
            {{ form_row(contactForm.PhoneNumber) }}
            {{ form_row(contactForm.object) }}
            {{ form_row(contactForm.message) }}
            {{ form_end(contactForm) }}
        </div>

        <div class="col-md-10 row justify-content-center align-items-center pt-4">
            <h3 class="text-center title3 pb-4">NOS COORDONNEES</h3>
