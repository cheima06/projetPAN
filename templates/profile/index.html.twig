{% extends 'base.html.twig' %}

{% block title %}Mon profil{% endblock %}

{% block body %}

  {#% include "flash.html.twig" %#} 


 <h3 class="text-center pb-4 title ">Mon profil</h3>
    <div class="row justify-content-center">
      <div class="col-md-6 row justify-content-center">
        {% if app.user.sexe == 'masculin' %}
          <img class=" img-fluid w-50 " src="{{ asset('build/images/homme.png')}}" alt="icone homme">
        {% elseif app.user.sexe == 'feminin' %}
          <img class=" img-fluid w-50 " src="{{ asset('build/images/femme.png')}}" alt="icone femme" >
        {% endif %}

      </div>
      <div class="col-md-6 p-5">
        <table class="table table-hover">
          <tbody >
            <tr>
              <th scope="row">Nom</th>
              <td>{{app.user.name}} </td>
            </tr>
            <tr>
              <th scope="row">Pr√©nom</th>
              <td>{{app.user.firstName}}</td>
            </tr>
             <tr>
              <th scope="row">Genre</th>
              <td>{{app.user.sexe}}</td>
            </tr>
            <tr>
              <th scope="row">Adresse</th>
              <td>{{app.user.adresse}}</td>
            </tr>
            <tr>
              <th scope="row">Code Postale</th>
              <td>{{app.user.postalCode}}</td>
            </tr>

            <tr>
              <th scope="row">E-mail</th>
              <td>{{app.user.email}}</td>
            </tr>
          </tbody>
        </table>
          <a class="btn bouton " href="{{path('app_profile_edit')}}">Modifier informations</a>
          <a class="btn bouton" href="{{path('app_profile_password_edit')}}">Modifier Mot de passe</a>
          <a class="btn btn-danger " href="{#{path('app_profile_delete')}#}">Supprimer mon compte </a> 
          {#% if app.user and 'ROLE_ADMIN' in app.user.getRoles() %}
             <a class="btn bouton " href="{{path('app_admin')}}">Acceder au profil Admin</a> 
          {% endif %#}
      </div>
    </div>

{% endblock %}
